@model GTI.CADASTRO.WEB.ViewModels.ClienteViewModel


@{
    ViewBag.Title = "Cadastro Cliente";
}

<h2>Cadastro</h2>
<hr />

@using (Html.BeginForm("Cliente", "Cadastro", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="container">
        <section id="cliente">
            <div class="row">
                <div class="form-group col-md-2">
                    @Html.LabelFor(m => m.CPF, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(m => m.CPF, new { htmlAttributes = new { @class = "form-control" } })
                </div>
                <div class="form-group col-md-4">
                    @Html.LabelFor(m => m.Nome, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(m => m.Nome, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </section>
    </div>
}

